@model ClassStudentVM
@{
    ViewData["Title"] = "Edit";
}

<h1 class="info">Update Student</h1>
<form asp-action="Edit" method="Post">
    <input type="hidden" asp-for=@Model.Student.Id />
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="@Model.Student.StudentName"></label>
        </div>
        <div class="col-3">
            <input asp-for="@Model.Student.StudentName" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Student.StudentName"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label asp-for="@Model.Student.ClassId"></label>
        </div>
        <div class="col-3">
            <select id="ddlcategorylis" asp-for="@Model.Student.ClassId" asp-items=ViewBag.List class="form-control"></select>

        </div>
        <span class="text-danger" asp-validation-for="@Model.Student.ClassId"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Back To List</a>
    </div>
</form>

